# SamudraSetu Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration (if using direct PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/samudra_setu
DB_HOST=localhost
DB_PORT=5432
DB_NAME=samudra_setu
DB_USER=username
DB_PASSWORD=password

# Social Media API Keys
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
YOUTUBE_API_KEY=your_youtube_api_key

# OpenStreetMap Configuration (free mapping)
# No API key required - using free OpenStreetMap tiles

# Official Data Sources
INCOIS_API_KEY=your_incois_api_key
IMD_API_KEY=your_imd_api_key
NOAA_API_KEY=your_noaa_api_key

# Notification Services
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
SENDGRID_API_KEY=your_sendgrid_api_key

# File Storage
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=your_s3_bucket_name
AWS_REGION=your_aws_region

# Security
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Application Settings
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# Analytics
GOOGLE_ANALYTICS_ID=your_google_analytics_id
SENTRY_DSN=your_sentry_dsn

# Mobile App Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# Internationalization
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi,ta,bn

# AI/ML Services
GEMINI_API_KEY=your_gemini_api_key
OPENAI_API_KEY=your_openai_api_key

# Feature Flags
ENABLE_SOCIAL_MONITORING=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_AI_VERIFICATION=true
ENABLE_GEMINI_AI=true
